@{
    ViewData["Title"] = "Chat Bot";
}

@model ChatBotApp.Models.ChatBotModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI ChatBot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">AI ChatBot</h1>
        <form asp-action="ProcessInput" method="post">
            <div class="mb-3">
                <label for="userInput" class="form-label">Your Input</label>
                <textarea class="form-control" id="userInput" name="UserInput" rows="3" placeholder="Enter your text here...">@Model.UserInput</textarea>
            </div>
            <div class="mb-3">
                <label for="featureType" class="form-label">Choose Feature</label>
                <select class="form-select" id="featureType" name="FeatureType">
                    <option value="summarize">Summarize Text</option>
                    <option value="script">Generate Script</option>
                    <option value="seo">SEO Suggestions</option>
                    <option value="content">Content Generation</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        @if (!string.IsNullOrEmpty(Model.BotResponse))
        {
            <div class="mt-4">
                <h5>Response:</h5>
                <p class="alert alert-info">@Model.BotResponse</p>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>